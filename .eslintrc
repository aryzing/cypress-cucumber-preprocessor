{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["cypress", "prettier"],
  "env": {
    "browser": true,
    "cypress/globals": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": "features/**",
      "rules": {
        "no-restricted-syntax": 0,
        "import/no-extraneous-dependencies": 0
      }
    }
  ]
}
